[Unit]
Description=SUJBOT Database Backup
After=docker.service
Requires=docker.service

[Service]
Type=oneshot
User=__USER__
WorkingDirectory=__PROJECT_DIR__
ExecStart=__PROJECT_DIR__/scripts/backup_cron.sh
StandardOutput=journal
StandardError=journal

# Security hardening
NoNewPrivileges=true
ProtectSystem=strict
# NOTE: Needs write access to entire project for temporary backup directory
ReadWritePaths=__PROJECT_DIR__

[Install]
WantedBy=multi-user.target
