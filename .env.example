# ====================================================================
# SUJBOT2 - Environment Variables Template
# ====================================================================
# CRITICAL: API keys are NEVER stored in config.json!
# All secrets and credentials go here (.env is gitignored)
# Configuration settings are in config.json (version-controlled)
#
# SETUP: Copy this file to .env and fill in your API keys
# ====================================================================

# Anthropic Claude API
ANTHROPIC_API_KEY=

# OpenAI API
OPENAI_API_KEY=

# Voyage AI API (optional - for embedding models)
VOYAGE_API_KEY=

# Google Gemini API (optional)
GOOGLE_API_KEY=

# DeepInfra API (for Qwen embedding + LLM)
DEEPINFRA_API_KEY=

# ====================================================================
# POSTGRESQL DATABASE (for Docker deployment)
# ====================================================================
# These values are used by docker-compose.yml
# Generate a secure password:
#   openssl rand -base64 32
#   python -c "import secrets; print(secrets.token_urlsafe(32))"

POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DB=sujbot
POSTGRES_PORT=5432

# Database URL (constructed from above values)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD_HERE@postgres:5432/sujbot

# ====================================================================
# NEO4J (optional - if using Neo4j instead of Apache AGE)
# ====================================================================
# Note: Apache AGE in PostgreSQL is recommended (no separate service needed)

# NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
# NEO4J_USERNAME=neo4j
# NEO4J_PASSWORD=

# ====================================================================
# AUTHENTICATION & SECURITY
# ====================================================================

# JWT Authentication Secret Key (REQUIRED - min 32 chars)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
AUTH_SECRET_KEY=

# ====================================================================
# DOCKER CONFIGURATION
# ====================================================================

# Build target: "development" or "production"
# Set to production for HTTPS enforcement and HSTS
BUILD_TARGET=development

# Backend port
BACKEND_PORT=8000

# Frontend ports
FRONTEND_DEV_PORT=5173  # Vite dev server (development)
FRONTEND_PROD_PORT=80   # Nginx (production)

# API base URL for frontend
# Production: Use /api (nginx proxy)
# Development: Use http://localhost:8000
VITE_API_BASE_URL=/api

# Logging level
LOG_LEVEL=INFO

# ====================================================================
# LANGSMITH OBSERVABILITY (optional)
# ====================================================================
# Enable in config.json: multi_agent.langsmith.enabled = true

# LANGSMITH_API_KEY=lsv2_pt_...
# LANGSMITH_PROJECT_NAME=sujbot2-multi-agent

# ====================================================================
# NEO4J DOCKER (optional - if using Neo4j graph database)
# ====================================================================

# NEO4J_PASSWORD=
# NEO4J_HTTP_PORT=7474
# NEO4J_BOLT_PORT=7687
